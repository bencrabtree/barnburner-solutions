{
    "compilerOptions": {
        "module": "commonjs",
        "resolveJsonModule": true,
        "strict": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "types": [
            "node", "express", "react"
        ]
    },
    "lib": [
        "es5",
        "es6"
    ],
    "target": "ES2017",
    // "moduleResolution": "node",
    "sourceMap": true,
    "exclude": [
        "node_modules"
    ]
}